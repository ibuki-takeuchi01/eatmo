<%= render "shared/header" %>
  <%= link_to image_tag("logo_5.png", class:"header-logo"), root_path %>

<div class='shop-contents'>
    <ul class='shop-lists'>
    <% @shops.each do |shop| %>
    <li class='shop-list'>
      <%#= link_to shop_path(shop_id) do %>
        <%= image_tag shop.images[0], class: "shop-img" %>
        <div class='shop-info'>
          <div class="shop-name">
            <%= link_to shop.shop_name, shop_path(shop), class: :shop_name %>
          </div>
            <div class="shop-address">
              <%= shop.traffic%> / <%= shop.genre.name %>
              <div class='review'>
                <span id="star-rate<%= shop.id%>"></span> 
              <script>
                $('#star-rate<%= shop.id%>').raty({
                size      : 36,
                starOff   : '<%= asset_path('star-off.png') %>',
                starOn    : '<%= asset_path('star-on.png') %>',
                starHalf: '<%= asset_path('star-half.png') %>',
                half: true,
                readOnly: true,
                score: <%= shop.reviews.average(:rate).to_f.round(2) %>,
                });
              </script>
              <p class="review-average">
              <%= shop.reviews.average(:rate).to_f.round(2) %></P>
              <p class="review-count">
              (<%= shop.reviews.count%>件)</p>
              </div>
              <div class="shop-budget">
                予算 : <%= shop.budget.name%>
              </div>
              <div class="shop-operating-hours">
              営業時間: <%=shop.operating_hours %>
              </div>
              <div class="shop-seat">
              席数: <%= shop.seat%>席
              </div>
              <div class="shop-other">
              <%=shop.other%>
              </div>
            </div>
        </div>
      </li>
      <% end %>
      <li class='shop-list'>
        <%=link_to image_tag("img_2599.png", class: "shop-img"),"#" %>
        <div class='shop-info'>
          <h1 class='shop-name'>
            <a href ="#">居酒屋　維吹</a>
          </h1>
            <div class="address">
              東京駅徒歩7分 / 居酒屋・和食
              <div class='review'>
                <span>★★★★☆</span> 3.91(77件)
              </div>
              <div class="budget">
                予算 : 4,000円〜4,999円
              </div>
              <div class="operating-hours">
              営業時間: 17:00〜23:00(Lo:22:30)
              </div>
              <div class="seat">
              席数: 45席
              </div>
              <div class="other">
              創業40年の東京駅前の隠れた居酒屋。
              </div>
            </div>
        </div>
      </li>
    </ul>
  </div>

  <%= render "shared/footer" %>